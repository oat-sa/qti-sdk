    xsi:schemaLocation="http://www.imsglobal.org/xsd/imsaqti_item_v1p0 http://www.imsglobal.org/xsd/qti/aqtiv1p0/imsaqti_itemv1p0_v1p0.xsd"
    identifier="aqti_tmh_sample_1"
    title="Estimate distances using multiplication with Tom"
    adaptive="false"
    timeDependent="false">
<responseDeclaration identifier="RESPONSE" cardinality="single" baseType="identifier">
  <correctResponse>
    <value>optionA</value>
  </correctResponse>
</responseDeclaration>
<outcomeDeclaration identifier="SCORE" cardinality="single" baseType="float"/>
<itemBody id="theItemBody">
  <p>Tom walks to and from his <span data-catalog-idref="cat2">harmonica</span> lessons once a week. His house on Ordinary
    Dr. is a 2 kilometre walk to his teacher's house on Spectacular St.</p>
  <qti-choice-interaction response-identifier="RESPONSE" shuffle="false" max-choices="1" class="qti-labels-upper-roman qti-labels-suffix-parenthesis">
    <qti-prompt>How many kilometres will he walk in a year for his harmonica lessons?</qti-prompt>
    <qti-simple-choice identifier="optionA" fixed="true">
      <p>About 200</p>
    </qti-simple-choice>
    <qti-simple-choice identifier="optionB" fixed="true">
      <p>About 100</p>
    </qti-simple-choice>
    <qti-simple-choice identifier="optionC" fixed="true">
      <p>About 50</p>
    </qti-simple-choice>
  </qti-choice-interaction>
</itemBody>

<catalogInfo>
  <catalog id="cat2">
    <card support="linguistic-guidance">
      <htmlContent>
        <div class="lg">
          <p>A small, rectangular instrument having a row of reeds set back in air holes. 
            A harmonica is played by blowing through the air holes. Sometimes it is called a 
            mouth organ, or mouth harp.</p>
        </div>
      </htmlContent>
    </card>
  </catalog>
</catalogInfo>

</assessmentItem>
