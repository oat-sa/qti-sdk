    identifier="aqti_tmh_sample_2"
    title="Estimate distances using multiplication with Grace"
    adaptive="false"
    timeDependent="false">
<responseDeclaration identifier="RESPONSE" cardinality="single" baseType="identifier">
  <correctResponse>
    <value>optionA</value>
  </correctResponse>
</responseDeclaration>
<outcomeDeclaration identifier="SCORE" cardinality="single" baseType="float"/>
<itemBody id="theItemBody">
  <p><span data-catalog-idref="cat1">Grace</span> walks to and from her <span data-catalog-idref="cat2">harmonica</span> lessons once a week. Her house on Maple
    <ssml:sub alias="Drive">Dr.</ssml:sub> is a 2 kilometre walk to her teacher's house on Chestnut
    <ssml:sub alias="street">St.</ssml:sub>
  </p>
  <qti-choice-interaction response-identifier="RESPONSE" shuffle="false" max-choices="1" class="qti-orientation-horizontal">
    <qti-prompt>How many kilometres will she walk in a year for her harmonica lessons?</qti-prompt>
    <qti-simple-choice identifier="optionA" fixed="true">
      <p>About 200</p>
    </qti-simple-choice>
    <qti-simple-choice identifier="optionB" fixed="true">
      <p>About 100</p>
    </qti-simple-choice>
    <qti-simple-choice identifier="optionC" fixed="true">
      <p>About 50</p>
    </qti-simple-choice>
  </qti-choice-interaction>
</itemBody>

